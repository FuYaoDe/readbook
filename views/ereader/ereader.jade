extends ../_layout_ereader

block body
  header
    .navbar
      h1 #{title}
  #viewer
    #viewer-content.single-page 
      each page in pages
        .image-rendering.image-content(id='p#{page.index}', data-url='#{page.url}')
    a.page-switcher.page-switcher-prev(href='#', data-transition='slide', data-direction='reverse', data-target='0', data-offset='-1', data-maximum='#{pageTotal}')
      i.fa.fa-chevron-left
    a.page-switcher.page-switcher-next(href='#', data-transition='slide', data-target='1', data-offset='1', data-maximum='#{pageTotal}')
      i.fa.fa-chevron-right
    input(name='current', value='0', type='hidden')
    input(name='maximum', value='#{pageTotal}', type='hidden')
  footer
    .progressbar
      div(style='display: inline-block; width: 100%;')
        .page-num-display
          span#textCurrentPageNum 1
          |  /
          span#textTotalPageNum #{pageTotal}
        #slider(data-min='0', data-max='#{pageTotal}')
        
block js
  script(src='/javascripts/ereader/ereader.js')
